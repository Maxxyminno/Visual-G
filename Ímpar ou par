Var
// Seção de Declarações das variáveis 
numero_final: inteiro
x: inteiro

Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 
 escreva("Informe qual será o número limite/limite do seu laço de repetição")
 escreval("")
 leia(numero_final)
 
 para x de 1 ate numero_final faca
  escreva("Número ", x)
  
  se(x % 2 = 0) entao
  escreval(" - PAR")
  senao
  escreval(" - ÍMPAR")
  fimse
  fimpara


